<simulation verbosity='medium'>
  <output prefix='nvt'>
   <checkpoint filename='checkpoint' stride='20000' overwrite='False'></checkpoint>
   <trajectory filename='pos' stride='100' format='xyz' cell_units='angstrom'> positions{angstrom} </trajectory>
   <properties filename='md' stride='500'> [step, time{picosecond}, conserved, temperature{Kelvin}, potential] </properties>
  </output>
  <total_steps> 1000000 </total_steps>
  <total_time> 83600 </total_time>
  <prng>
  <seed> 49201 </seed>
  </prng>
  <ffsocket mode='unix' name='MASE'>
  <address> ipihost </address>
  <port> 13236 </port>
  </ffsocket>
  <system>
    <initialize nbeads='1'>
      <file mode='xyz'> initial.xyz </file>
      <velocities mode='thermal' units='kelvin'> caldo </velocities>
    </initialize>
    <forces>
      <force forcefield='MASE'> </force>
    </forces>
    <ensemble>
      <temperature units='kelvin'> caldo </temperature>
    </ensemble>
    <motion mode='dynamics'>
      <dynamics mode='nvt'>
        <thermostat mode='svr'>
          <tau units="femtosecond"> 30 </tau>
        </thermostat>
        <timestep units='femtosecond'> 1.0 </timestep>
      </dynamics>
    </motion>
  </system>
</simulation>
